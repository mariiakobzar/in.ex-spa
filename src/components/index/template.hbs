<section class="hero">
  <div class="hero-main">
    <div class="hero-main-content">
      <h1 class="hero-main-content__title">
        <span>IT'S TIME</span>
        <span>TO STEP UP</span>
        <span>YOUR GAME</span>
      </h1>
      <a href="#" class="hero-main-content__btn">Shop now</a>
    </div>

  </div>
  </div>
  <div class="hero-paralax">
    <div class="hero-paralax__img">
      <img src="\images/hero-portret.jpg" alt="">
    </div>
  </div>
</section>

<section class="articles">
  <div class="container">
    <div class="articles-container">
      <div class="article">
        <img src="\images/article1.jpg" alt="">
        <div class="article-box">
          <div class="article-box-content">
            <h3 class="article-box__title">
              <span>Shop new</span>
              <span>arrivals</span>
            </h3>
            <a href="#">
              <svg>
                <use xlink:href="#svg-arrow"></use>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <div class="article">
        <img src="\images/article2.jpg" alt="">
        <div class="article-box">
          <div class="article-box-content">
            <h3 class="article-box__title">
              <span>Shop new</span>
              <span>bestsellers</span>
            </h3>
            <a href="#">
              <svg>
                <use xlink:href="#svg-arrow"></use>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <div class="article">
        <img src="\images/article3.jpg" alt="">
        <div class="article-box">
          <div class="article-box-content">
            <h3 class="article-box__title">
              <span>Join our</span>
              <span>community</span>
            </h3>
            <a href="#">
              <svg>
                <use xlink:href="#svg-arrow"></use>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="big-article">
    <div class="big-article-info">
      <h2 class="big-article-info__title">
        <span>Workout</span>
        <span>anytime,</span>
        <span>anywhere</span>
      </h2>
      <p class="big-article-info__text">
        I'm a paragraph. Click here to add your own text and edit me. It’s easy. Just click “Edit Text” or double
        click me to add your own content and make changes to the font.
      </p>
      <a href="#" class="btn">Read More</a>
    </div>
    <div class="big-article-image">
      <img src="\images/girl.jpg" alt="girl">
    </div>
  </div>
</section>

<section class="arrivals">
  <h3 class="arrivals__title">New arrivals</h3>
  <div class="container" id="arrivals">
    \{{#eachForIndex products}}
    <div class="item">
      <div class="item__image">
        \{{{img src}}}
        <div class="item--tag">
          <p>\{{tag}}</p>
        </div>
        <a class="item--hover">
          <p>Quick View</p>
        </a>
      </div>
      <div class="item-info">
        <h4 class="item-info__name">\{{name}}</h4>
        <p class="item-info__price">\{{price}}</p>
      </div>
    </div>
    \{{/eachForIndex}}
  </div>
  <a href="#" class="btn">Shop All</a>
</section>